pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
                echo 'Repository checkout complete'
            }
        }

        stage('Build') {
            steps {
                dir('petclinic') {
                    sh 'mvn -B clean package -DskipTests'
                }
                echo 'Build completed'
            }
        }

        stage('Test') {
            steps {
                dir('petclinic') {
                    sh 'mvn test'
                }
                echo 'Tests completed'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarQube') {
                    dir('petclinic') {
                        // Run SonarQube analysis
                        sh 'mvn sonar:sonar -Dsonar.projectKey=spring-petclinic -Dsonar.host.url=http://localhost:9000'
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}