# Server configuration
server.port=8080

# Database configuration - Using H2 in-memory database for simplicity
# Replace with your production database settings as needed
spring.datasource.url=jdbc:h2:mem:petclinic
spring.datasource.driver-class-name=org.h2.Driver
spring.datasource.username=sa
spring.datasource.password=password
spring.h2.console.enabled=false

# Logging configuration
logging.level.org.springframework=INFO
logging.level.org.hibernate=INFO
logging.file.name=/var/log/{{ app_name }}/{{ app_name }}.log

# Actuator endpoints
management.endpoints.web.exposure.include=health,info