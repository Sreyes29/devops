[Unit]
Description=Spring PetClinic Application
After=syslog.target network.target

[Service]
User={{ app_user }}
Group={{ app_group }}
WorkingDirectory={{ app_home }}
ExecStart=/usr/bin/java -jar {{ app_home }}/petclinic.jar --spring.config.location={{ app_home }}/config/application.properties
SuccessExitStatus=143
TimeoutStopSec=10
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target